{
  "name": "bluemage",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build-css": "node-sass --include-path scss assets/stylesheets/main.scss public/css/main.css",
    "postinstall": "npm run copy-assets",
    "copy-assets": "rm -rf public && mkdir public && cp -R assets/* public/"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "helmet": "^1.1.0",
    "hogan": "^1.0.2",
    "hogan-express-strict": "^0.5.4",
    "morgan": "~1.6.1",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1"
  }
}
